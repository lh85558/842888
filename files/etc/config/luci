	option shadow '/etc/shadow'
	option gshadow '/etc/gshadow'
	option fstab '/etc/fstab'
	option dhcp '/etc/dhcp.leases'
	option hosts '/etc/hosts'
	option crontabs '/etc/crontabs/'
